<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>SDTR Consulting LLC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        window.configLocation = "";
    </script>

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <div class="navbar-brand"> <img src="~/Images/picture_logo.png" width="106" height="45"> &nbsp; &nbsp; <b style="color:white">SDTR<i>Care</i></b> </div>


            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                           <li>@Html.ActionLink("Add User", "AddUser", "Admin")</li>


                    </ul>*@
                @Html.Partial("_LoginPartial")
            </div>

        </div>
        @*<div class="navbar navbar-default  ">
                <div class="container">
                </div>
            </div>*@


    </div>
  
    <div class="sidebar-toggle" style="width:10%;height:100%">
            <ul class=" nav-tabs flex-column" style="list-style:none;text-align:right !important;align-items:flex-end !important;padding-top:1px !important">
                <li class="tabs" id="lihome" style="margin-top:18px !important;float:right !important">
                    <a href="#">Home</a>
                </li>
                <li class="tabs" id="liemp" style="margin-top:3px !important;float:right !important">
                    <a href="@Url.Action("Timesheet", "Employee")">Employee</a>
                </li>
                <li class="tabs" id="licontractor" style="margin-top:3px !important;float:right !important">
                    <a href="#">Contractor</a>
                </li>
                <li class="tabs" id="livendor" style="margin-top:3px !important;float:right !important">
                    <a href="#">Vendor</a>
                </li>

                <li class="tabs" id="lireporting" style="margin-top:3px !important;float:right !important">
                    <a href="#">Reporting</a>
                </li>
                <li class="tabs" id="liadmin" style="margin-top:3px !important;float:right !important">
                    <a href="@Url.Action("AddUser", "Admin")">Admin</a>
                </li>

            </ul>
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.debug.js"></script>
    <script>
        $(document).ready(function () {
            //$("#nav1").find("ul.mastermenu li").each(function () {
            //    $(this).removeClass("active");
            //});

            setNav();

        });
        function setNav() {
            var url = window.location.href;
            var menuitem = "";
            $('#lihome').addClass("active");
            $('#lihome').removeClass("tabs");
            $('#liemp').removeClass("active");
            $('#liemp').addClass("tabs");

            $('#liadmin').removeClass("active");
            $('#liadmin').addClass("tabs");

            $('#lireporting').removeClass("active");
            $('#lireporting').addClass("tabs");

            $('#livenodr').removeClass("active");
            $('#livenodr').addClass("tabs");

            $('#licontractor').removeClass("active");
            $('#licontractor').addClass("tabs");
            if (url.toLowerCase().indexOf("employee") != "-1") {
                $('#lihome').removeClass("active");
                $('#lihome').addClass("tabs");

                $('#liemp').addClass("active");
                $('#liemp').removeClass("tabs");

                $('#liadmin').removeClass("active");
                $('#liadmin').addClass("tabs");

                $('#lireporting').removeClass("active");
                $('#lireporting').addClass("tabs");

                $('#livenodr').removeClass("active");
                $('#livenodr').addClass("tabs");

                $('#licontractor').removeClass("active");
                $('#licontractor').addClass("tabs");

            }

            else if (url.toLowerCase().indexOf("admin") != "-1") {
                $('#lihome').removeClass("active");
                $('#lihome').addClass("tabs");

                $('#liemp').removeClass("active");
                $('#liemp').addClass("tabs");

                $('#liadmin').addClass("active");
                $('#liadmin').removeClass("tabs");

                $('#lireporting').removeClass("active");
                $('#lireporting').addClass("tabs");

                $('#livenodr').removeClass("active");
                $('#livenodr').addClass("tabs");

                $('#licontractor').removeClass("active");
                $('#licontractor').addClass("tabs");

            }

            else if (url.toLowerCase().indexOf("venodr") != "-1") {
                $('#lihome').removeClass("active");
                $('#lihome').addClass("tabs");

                $('#liemp').removeClass("active");
                $('#liemp').addClass("tabs");

                $('#liadmin').removeClass("active");
                $('#liadmin').addClass("tabs");

                $('#lireporting').removeClass("active");
                $('#lireporting').addClass("tabs");

                $('#livenodr').addClass("active");
                $('#livenodr').removeClass("tabs");

                $('#licontractor').removeClass("active");
                $('#licontractor').addClass("tabs");

            }

            else if (url.toLowerCase().indexOf("reporting") != "-1") {
                $('#lihome').removeClass("active");
                $('#lihome').addClass("tabs");

                $('#liemp').removeClass("active");
                $('#liemp').addClass("tabs");

                $('#liadmin').removeClass("active");
                $('#liadmin').addClass("tabs");

                $('#lireporting').addClass("active");
                $('#lireporting').removeClass("tabs");

                $('#livenodr').removeClass("active");
                $('#livenodr').addClass("tabs");

                $('#licontractor').removeClass("active");
                $('#licontractor').addClass("tabs");

            }

            else if (url.toLowerCase().indexOf("contractor") != "-1") {
                $('#lihome').removeClass("active");
                $('#lihome').addClass("tabs");

                $('#liemp').removeClass("active");
                $('#liemp').addClass("tabs");

                $('#liadmin').removeClass("active");
                $('#liadmin').addClass("tabs");

                $('#lireporting').removeClass("active");
                $('#lireporting').addClass("tabs");

                $('#livenodr').removeClass("active");
                $('#livenodr').addClass("tabs");

                $('#licontractor').addClass("active");
                $('#licontractor').removeClass("tabs");

            }



        }
    </script>
</body>
</html>
